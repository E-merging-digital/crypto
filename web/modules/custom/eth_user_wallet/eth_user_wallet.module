<?php

/**
 * @file
 * Hooks and integration for the eth_user_wallet module.
 */

use Drupal\user\UserInterface;

/**
 * Implements hook_user_insert().
 */
function eth_user_wallet_user_insert(UserInterface $account): void {
  // Utilise le service de génération de wallet ; dans un hook procédural,
  // \Drupal::service() est acceptable. :contentReference[oaicite:4]{index=4}.
  \Drupal::service('eth_user_wallet.wallet_generator')->generate($account);
}
